<section id="create-page">
    <div class="createSection">
        <div class="info">
            <h2>"Today, I consider myself the luckiest man on the face of the earth." -The Pride of the Yankees, 1942
            </h2>
        </div>

        <form action="/movies/create" method="POST" class="createForm">
            <h2>Add Movie</h2>
            <ul class="noBullet">
                <li>
                    <label for="title">Title:</label>
                    <input type="text" class="inputFields" id="title" name="title" value="{{movie.title}}"/>
                </li>
                <li>
                    <label for="category">Category:</label>
                    <select id="category" class="inputFields" name="category">
                        <option value="">Select Category</option>
                        {{#each categories}}
                        <option value="{{value}}" {{selected}}>{{title}}</option>
                        {{/each}}
                    </select>
                </li>
                <li>
                    <label for="genre">Genre:</label>
                    <input type="text" class="inputFields" id="genre" name="genres" value="{{movie.genres}}"/>
                </li>
                <li>
                    <label for="director">Director:</label>
                    <input type="text" class="inputFields" id="director" name="director" value="{{movie.director}}" />
                </li>
                <li>
                    <label for="date">Release Year:</label>
                    <input type="number" class="inputFields" id="year" name="releaseYear" value="{{movie.releaseYear}}"/>
                </li>
                <li>
                    <label for="image">Movie Poster:</label>
                    <input type="text" class="inputFields" id="image" name="imageUrl" value="{{movie.imageUrl}}"/>
                </li>
                <li>
                    <label for="rating">Rating:</label>
                    <input type="number" step="0.1" min="0" max="10" class="inputFields" id="rating" name="rating" value="{{movie.rating}}"/>
                </li>
                <li>
                    <label for="description">Description:</label>
                    <textarea id="description" class="inputFields" name="description" value="{{movie.description}}"></textarea>
                </li>

                <li id="center-btn">
                    <button id="create-btn">Add Movie</button>
                </li>
            </ul>
        </form>


    </div>
</section>